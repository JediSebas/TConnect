<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".extrasearch.ExtraSearchActivity">

    <EditText
        android:id="@+id/code_extra_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/code_example"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="@dimen/et_min_height"
        android:textColorHint="#8D6E63"
        android:maxLength="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <EditText
        android:id="@+id/number_t_extra_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/number_t_header"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="@dimen/et_min_height"
        android:textColorHint="#8D6E63"
        android:layout_marginTop="@dimen/extra_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_extra_et" />

    <EditText
        android:id="@+id/date_extra_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/date_example"
        android:importantForAutofill="no"
        android:inputType="date"
        android:minHeight="@dimen/et_min_height"
        android:textColorHint="#8D6E63"
        android:layout_marginTop="@dimen/extra_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_t_extra_et" />

    <EditText
        android:id="@+id/n_w_extra_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/n_w_header"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="@dimen/et_min_height"
        android:textColorHint="#8D6E63"
        android:layout_marginTop="@dimen/extra_margin_top"
        android:maxLength="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_extra_et" />

    <EditText
        android:id="@+id/four_code_extra_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/four_digit_example"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="@dimen/et_min_height"
        android:textColorHint="#8D6E63"
        android:layout_marginTop="@dimen/extra_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n_w_extra_et" />

    <Button
        android:id="@+id/extra_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/extra_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four_code_extra_et" />
</androidx.constraintlayout.widget.ConstraintLayout>